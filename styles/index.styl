@require 'variables.styl'

body
  background-color $white
  padding 30px
  font-size 18px
  font-family $font-garamond

  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-font-variant-ligatures common-ligatures
  font-variant-ligatures common-ligatures
  -moz-font-feature-settings "kern=1"
  -webkit-font-feature-settings "kern"
  -moz-font-feature-settings "kern"
  font-feature-settings "kern"
  font-kerning normal
  
  .content
    transition all 2s
    opacity 1

    &.fadeIn
      opacity 0

  a
    color $gray
    text-decoration none
    padding-bottom 6px   
    
  hr 
    margin-bottom 30px
    padding-bottom 0px
    border 0px
    border-bottom 1px solid rgba(51, 51, 51, .2)
  
  p.category
    position absolute
    top 130px
    right 85px
    font-style italic
    letter-spacing 1px
    text-align right
    
  p.pull
    font-size 26px
    font-style italic
    text-align center
  
  .link
    font-family $font-garamond
    font-size 14px
    text-transform uppercase
    font-weight normal
    letter-spacing 3px   
    
  p.pull.aboutheader
    padding 30px 0px
    font-size 46px
    color rgba(51, 51, 51, .7)
    
  .select
    border-top 1px solid rgba(51, 51, 51, .2)
    border-bottom 1px solid rgba(51, 51, 51, .2)
    margin 30px 0px
    padding 30px 0px 50px 0px
    a 
      font-style italic
      padding-right 4px
      line-height 30px
    a:hover 
      border-bottom 1px solid rgba(51, 51, 51, .2)

  h4
    font-family $font-garamond
    font-size 14px
    text-transform uppercase
    font-weight normal
    letter-spacing 3px
  
  // header

  section.intro
    padding-left 26px
    nav
      position absolute
      right 50px
      top 24px
      ul.navlist
        text-transform uppercase
        font-size 14px
        letter-spacing 3px
        li
          display inline-block
          padding 20px
          a.current
            border-bottom 1px solid rgba(51, 51, 51, .2)
          a:hover
            border-bottom 1px solid rgba(51, 51, 51, .2)

  // main content

  section.paper
    background-color $paper
    padding 10px 30px 30px 30px
    margin-top 30px
    height 100%
      
    .main:hover
      opacity 1
      
    img
      display inherit
      border-top 8px solid rgba(244, 243, 239, 0)
      border-right 16px solid rgba(244, 243, 239, 0)
      box-sizing border-box
      position relative
    img:hover
      opacity 0.5
      
    .half
      width 50%
    .left
      float left

    img.main
      width 100%

    // project info

    .info
      margin 0 15%
      padding-bottom 30px
      padding-top 30px
      
    .desc
      a
        font-style italic
      
    .client, .featured
      width 50%
      display inline-block
      vertical-align top
    
      a 
        border-bottom 1px solid rgba(51, 51, 51, .2)
        padding-bottom 2px
        margin-right 4px
      a:hover
        border-bottom 1px solid rgba(51, 51, 51, .8)
        
  // inputs
    
  input
    border none
  font
    width 100%
  fieldset
    border none
    padding 0px
    margin 0px
    width 100%
  fieldset.name
    display inline-block 
    vertical-align top
    width 50%
  fieldset.email
    display inline-block
    vertical-align top
    width 50% 
    
  input
    width 80%
    height 30px
    padding-left 10px
    
  textarea#message
    width 91%
    border none
    
  button.button-xlarge
      padding 0px 30px
      border none
      margin-top 20px
      background-color $lightgreen
      
  // footer
  
  footer
    padding 30px 0px 0px 30px
    .footerleft,
    .footerright
      display inline-block
      vertical-align middle
    .footerright
      padding-left 30px
      
    ul
      list-style none
      margin 0px
      padding 20px 0px
    
// media queries
      
@media $mobile-devices

  body
    padding 10px
    
    p.pull.aboutheader
      font-size 38px
    
    section.intro
      text-align center
      padding-left 0px
      margin-bottom 50px
      nav
        width 100%
        left -30px
        top 70px
        ul.navlist
          width 100%
          li
            padding 0px
            padding-right 10px
    
    section.paper
      margin 0px
      
      .title
        display none

      .info
        margin 0px
        
      .half
        width 100%
        
      .select, .featured
        width 100%
        
      .select:last-of-type
        border-bottom 0px
        padding-bottom 0px
        margin-bottom 0px
        
      p.category
        display none
    
    footer
      padding 30px 0px
      text-align center
      .footerright
        padding-left 0px
        padding-top 20px
        width 100%
        
        a
          display block
        span 
          display none
